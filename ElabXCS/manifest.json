{
  "manifest_version": 3,
  "name": "ElabXCS",
  "version": "1.1.5",
  "description": "Get a personal assistant for Elab with ElabXCS, an initiative by IncognitoQuack.",
  "author": "IncognitoQuack",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://elabxcs-admin-panel-production.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
